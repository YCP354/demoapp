<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lable_sim_test"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lable_photo_test"
        app:layout_constraintEnd_toStartOf="@id/btn_sim"
        app:layout_constraintTop_toBottomOf="@id/btn_sim" />
    <Button
        android:visibility="gone"
        android:id="@+id/btn_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lable_camera"
        app:layout_constraintEnd_toStartOf="@id/btn_photo"
        app:layout_constraintTop_toBottomOf="@id/btn_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>